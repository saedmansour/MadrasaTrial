@{  
    // CONSTANTS -----------------------------------------------------------

    const string imageStartPath = "~/Content/images/";

    var pageCss = @Url.Content("~/Content/css/default.css");
    var logo = @Url.Content(imageStartPath + "logo_silver_no_text.png");
    var logOut = @Url.Content(imageStartPath + "log_out.png");
    var competition = @Url.Content(imageStartPath + "1_2_3.png");
    var report = @Url.Content(imageStartPath + "report.png");

    // LINKS ---------------------------------------------------------------
    var homeLink = @Url.Content("~/");
    var competitionLink = @Url.Content("~/student/top5");
    var lougoutLink = @Url.Content("~/Account/LogOff");
    var reportLink = @Url.Content("~/student/report");
    if (User.IsInRole("المعلم"))
    {
        reportLink = @Url.Content("~/student/ClassSummary");
    }

    //POPUP-Window settings
    const int popupHeight = 650;
    const int popupWidth = 1200;
}
<!DOCTYPE html>
<html>
<head>
    <title>Madrasa: @ViewBag.Title</title>
    @* Allow template users to make changes to the head section. *@
    @RenderSection("head", false)
    
    @* Page style *@
    <link rel="stylesheet" href="@pageCss" type="text/css" />
        
    @* TopUp Window *@
<!--
    <script type="text/javascript" src="@Url.Content("~/Scripts/topup/top_up.js")"></script> 
-->
    @* Jquery *@
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    @* JSON *@
    <script src="@Url.Content("~/scripts/json/json_parse.js")" type="text/javascript"></script> 
    <script src="@Url.Content("~/scripts/json/json_encode.js")" type="text/javascript"></script>

    
    @* Chrome: prevent the translate this page toolbar popping up. *@
    <meta name="google" value="notranslate" />
    
    <meta charset="UTF-8" />
    <meta http-equiv="Content-Language" content="en" />  
</head>

<body>

